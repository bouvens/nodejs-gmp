{
  "name": "node.js-learning",
  "version": "0.0.0",
  "description": "A simple Node.js learning project",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start": "node index.js",
    "start:watch": "nodemon",
    "start:watch-debug": "nodemon --config nodemon-debug.json",
    "lint": "eslint \"{src,tests}/**/*.{js,ts}\"",
    "lint:fix": "eslint \"{src,tests}/**/*.{js,ts}\" --fix",
    "tsc-check": "tsc --noEmit --skipLibCheck",
    "test": "jest --config=./tests/jest.settings.ts",
    "test:watch": "jest --config=./tests/jest.settings.ts --watch",
    "test:cov": "jest --config=./tests/jest.settings.ts --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "rimraf": "^3.0.2",
    "sequelize": "^6.6.2",
    "typescript": "~4.1.5",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@jest-mock/express": "^1.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.2",
    "jest": "^27.0.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.1",
    "ts-node": "^9.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
